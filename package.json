{
  "name": "SocialMedia",
  "description": "A simple Social Media App developed using React Native for Mini Project + Milestone Assignment",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "SET ENVFILE=.env.staging && react-native run-android",
    "android:prod": "SET ENVFILE=.env.production && react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint .",
    "start": "react-native start",
    "test": "jest",
    "build-android-local:staging": "SET ENVFILE=.env.staging && cd android && gradlew clean && gradlew app:assembleRelease",
    "build-android:staging": "ENVFILE=.env.staging && cd android && ./gradlew clean && ./gradlew app:assembleRelease",
    "build-android:prod": "ENVFILE=.env.staging && cd android && ./gradlew clean && ./gradlew app:bundleRelease"
  },
